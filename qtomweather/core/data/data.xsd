<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="http://omweather.garage.maemo.org/schemas" xmlns:schemas="http://omweather.garage.maemo.org/schemas">
  <xs:element name="station">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="schemas:timezone"/>
        <xs:element maxOccurs="unbounded" ref="schemas:period"/>
      </xs:sequence>
      <xs:attribute name="id" use="required" type="xs:string"/>
      <xs:attribute name="name" use="required" type="xs:string"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="timezone" type="xs:integer"/>
  <xs:element name="period">
    <xs:complexType>
      <xs:choice>
        <xs:sequence>
          <xs:element ref="schemas:temperature"/>
          <xs:element ref="schemas:wind_speed"/>
          <xs:element ref="schemas:wind_direction"/>
          <xs:element ref="schemas:wind_gust"/>
          <xs:element ref="schemas:humidity"/>
          <xs:element ref="schemas:pressure"/>
          <xs:element ref="schemas:text"/>
          <xs:element ref="schemas:flike"/>
          <xs:element ref="schemas:icon"/>
        </xs:sequence>
        <xs:sequence>
          <xs:element ref="schemas:sunrise"/>
          <xs:element ref="schemas:sunset"/>
          <xs:element ref="schemas:moon"/>
        </xs:sequence>
      </xs:choice>
      <xs:attribute name="end" use="required" type="xs:integer"/>
      <xs:attribute name="start" use="required" type="xs:integer"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="temperature" type="xs:integer"/>
  <xs:element name="wind_speed" type="xs:decimal"/>
  <xs:element name="wind_direction" type="xs:NCName"/>
  <xs:element name="wind_gust" type="xs:decimal"/>
  <xs:element name="humidity" type="xs:integer"/>
  <xs:element name="pressure" type="xs:integer"/>
  <xs:element name="text" type="xs:string"/>
  <xs:element name="flike">
    <xs:complexType/>
  </xs:element>
  <xs:element name="icon">
    <xs:complexType/>
  </xs:element>
  <xs:element name="sunrise">
    <xs:complexType/>
  </xs:element>
  <xs:element name="sunset">
    <xs:complexType/>
  </xs:element>
  <xs:element name="moon">
    <xs:complexType/>
  </xs:element>
</xs:schema>
